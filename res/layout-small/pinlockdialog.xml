<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Enter Passcode"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:typeface="serif" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_small_circle_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/small_circle" />

        <ImageView
            android:id="@+id/img_small_circle_2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/small_circle" />

        <ImageView
            android:id="@+id/img_small_circle_3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/small_circle" />

        <ImageView
            android:id="@+id/img_small_circle_4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/small_circle" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/img_big_circle_1"
                android:layout_width="@dimen/big_btn_size"
                android:layout_height="@dimen/big_btn_size"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/big_circle_btn"
                android:text="1"
                android:textColor="#ffffffff"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/img_big_circle_2"
                android:layout_width="@dimen/big_btn_size"
                android:layout_height="@dimen/big_btn_size"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/big_circle_btn"
                android:text="2"
                android:textColor="#ffffffff"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/img_big_circle_3"
                android:layout_width="@dimen/big_btn_size"
                android:layout_height="@dimen/big_btn_size"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/big_circle_btn"
                android:text="3"
                android:textColor="#ffffffff"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/big_btn_vertical_margin"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/img_big_circle_4"
                android:layout_width="@dimen/big_btn_size"
                android:layout_height="@dimen/big_btn_size"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/big_circle_btn"
                android:text="4"
                android:textColor="#ffffffff"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/img_big_circle_5"
                android:layout_width="@dimen/big_btn_size"
                android:layout_height="@dimen/big_btn_size"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/big_circle_btn"
                android:text="5"
                android:textColor="#ffffffff"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/img_big_circle_6"
                android:layout_width="@dimen/big_btn_size"
                android:layout_height="@dimen/big_btn_size"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/big_circle_btn"
                android:text="6"
                android:textColor="#ffffffff"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/big_btn_vertical_margin"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/img_big_circle_7"
                android:layout_width="@dimen/big_btn_size"
                android:layout_height="@dimen/big_btn_size"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/big_circle_btn"
                android:text="7"
                android:textColor="#ffffffff"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/img_big_circle_8"
                android:layout_width="@dimen/big_btn_size"
                android:layout_height="@dimen/big_btn_size"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/big_circle_btn"
                android:text="8"
                android:textColor="#ffffffff"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/img_big_circle_9"
                android:layout_width="@dimen/big_btn_size"
                android:layout_height="@dimen/big_btn_size"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/big_circle_btn"
                android:text="9"
                android:textColor="#ffffffff"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/img_big_circle_0"
            android:layout_width="@dimen/big_btn_size"
            android:layout_height="@dimen/big_btn_size"
            android:layout_below="@+id/ll4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/big_btn_vertical_margin"
            android:background="@drawable/big_circle_btn"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="40dp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>